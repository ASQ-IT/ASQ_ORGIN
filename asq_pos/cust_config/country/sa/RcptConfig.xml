		<row>
        <field text="_asqvatnumber"   loc="29" style="BOLD"/>
        <sp />
        <field style="BOLD">
        <aggregate class="asq.pos.docbuilder.AsqVatNumberDocBuilder" />
        </field>
      	</row>
		<row>
        <field text="_ticket"   loc="33" />
