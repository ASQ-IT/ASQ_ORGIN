	<field text="_asqPlanetReceipt3" loc="10"/>
	<field method="getStringProperty" method_param="ASQ_PLANET_TAX_ID" loc="10" style="BOLD" />
	<field text="-------------------------------------------------------" loc="10"/>
	<field text="_asqPlanetReceipt4" loc="10"/>
	</row>
	</section>
	<!-- Planet integration changes	end -->
	
