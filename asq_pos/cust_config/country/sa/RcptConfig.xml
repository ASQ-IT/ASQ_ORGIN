	<section name="invoice_text">
		<region alignment="C">
			<field text="_simplifiedTaxInvoicearabic" style="BOLD" />
		</region>
		<region alignment="C">
			<field text="_simplifiedTaxInvoice" style="BOLD" />
		</region>
	</section>

	<section name="logo" >
		<picture
			filename="../xstoredata/xstore/res/graphics/receipt/logo.bmp"
			preload="true" />
